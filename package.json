{
  "name": "street-team-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "aws-amplify": "^3.0.24",
    "aws-amplify-react": "^4.1.23",
    "eslint-config-airbnb": "^18.2.0",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-scripts": "3.4.3",
    "styled-components": "^5.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "echo 'Linting...' && eslint --ignore-path .gitignore . --fix && echo 'Lint complete.'",
    "format": "npm run -s lint -- --fix && echo 'Lint complete.'",
    "watch": "watch 'clear && yarn -s unit-tests | tap-nirvana && yarn -s format' src",
    "debug": "NODE_ENV=test node --inspect-brk -r @babel/register -r @babel/polyfill ./src/index.test.js",
    "validate": "yarn -s unit-tests && yarn -s lint && yarn -s functional-tests --app 'yarn start' --app-init-delay 4000",
    "functional-tests": "testcafe 'chrome:headless' src/functional-tests/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test -- --watchAll=false"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/react"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/sort": "error",
      "import/order": "off"
    }
  },
  "unit-tests": "NODE_ENV=test node -r @babel/register -r @babel/polyfill ./src/index.test.js",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.10.5",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-testcafe": "^0.2.1",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "riteway": "^6.1.2",
    "tap-nirvana": "^1.1.0",
    "testcafe": "^1.9.1",
    "watch": "^1.0.2"
  }
}
